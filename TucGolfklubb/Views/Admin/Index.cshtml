@{
    ViewData["Title"] = "Administratörspanel";
}

<style>
    body {
        padding-top: 80px;
    }
</style>

<div class="container forum-page">
    <h2 class="mb-5" style="color: #001b2e;">Välkommen till adminpanelen!</h2>

    <div class="row justify-content-center g-4">
        <!-- Hantera Produkter -->
        <div class="col-md-8">
            <a asp-controller="AdminProducts" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 rounded-4" style="background-color: #b3cde4;">
                    <div class="card-body d-flex align-items-center justify-content-between p-4">
                        <div class="fs-4 fw-bold" style="color: #001b2e;">🛍️ Hantera produkter</div>
                        <i class="bi bi-box-seam fs-2 text-muted"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Hantera Ordrar -->
        <div class="col-md-8">
            <a asp-controller="AdminOrders" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 rounded-4" style="background-color: #b3cde4;">
                    <div class="card-body d-flex align-items-center justify-content-between p-4">
                        <div class="fs-4 fw-bold" style="color: #001b2e;">📋 Hantera ordrar</div>
                        <i class="bi bi-receipt fs-2 text-muted"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
