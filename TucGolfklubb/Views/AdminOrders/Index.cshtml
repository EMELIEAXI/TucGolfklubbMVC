@model IEnumerable<TucGolfklubb.Models.Order>
@{
    ViewData["Title"] = "Ordrar";
}

<div style="padding-top: 120px;">
    <h2>Ordrar</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Beställnings-ID</th>
                <th>Kund</th>
                <th>Datum</th>
                <th>Totalt</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.User?.UserName</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.TotalAmount.ToString("0.00") kr</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">📄 Detaljer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end mt-4">
        <a href="/Admin" class="btn btn-secondary">⬅️ Tillbaka till Adminpanel</a>
    </div>
</div>
