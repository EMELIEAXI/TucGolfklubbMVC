@model TucGolfklubb.Models.Product
@{
    ViewData["Title"] = "Ny produkt";
}
<style>
    body {
        padding-top: 80px;
    }
</style>

<div class="container forum-page">
    <h2 class="mb-4" style="color: #001b2e;">Ny produkt</h2>

    <!-- Form to create product -->
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Produkt Namn</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Beskrivning</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Pris</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Stock" class="form-label">Lager</label>
            <input asp-for="Stock" class="form-control" type="number" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Kategori</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                <option value="">-- Välj kategori --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="imageFile" class="form-label">Produktbild</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <!-- Submit and Cancel Buttons -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn custom-dark-button shadow-sm">💾 Spara</button>
            <a asp-action="Index" class="btn custom-secondary-button shadow-sm">Avbryt</a>
        </div>
    </form>
</div>
