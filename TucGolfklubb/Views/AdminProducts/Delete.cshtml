@model TucGolfklubb.Models.Product
@{
    ViewData["Title"] = "Radera produkt";
}
<style>
    body {
        padding-top: 140px;
    }
</style>

<div class="container forum-page">
    <h2 class="mb-4" style="color: #001b2e;">Är du säker på att du vill radera denna produkt?</h2>

    <div class="card shadow-sm p-4">
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Beskrivning</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Pris</dt>
            <dd class="col-sm-10">@Model.Price.ToString("0.00") kr</dd>

            <dt class="col-sm-2">Lager</dt>
            <dd class="col-sm-10">@Model.Stock</dd>

            <dt class="col-sm-2">Kategori</dt>
            <dd class="col-sm-10">@Model.Category?.Name</dd>
        </dl>

        <!-- Confirmation Form -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />

            <!-- Button Section -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn custom-dark-button shadow-sm">🗑️ Radera</button>
                <a asp-action="Index" class="btn custom-secondary-button shadow-sm">Avbryt</a>
            </div>
        </form>
    </div>
</div>
