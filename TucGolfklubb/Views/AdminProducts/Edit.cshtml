@model TucGolfklubb.Models.Product

@{
    ViewData["Title"] = "Redigera produkt";
}

<h2>Redigera produkt</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name", Model.CategoryId))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">💾 Spara</button>
    <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
</form>
