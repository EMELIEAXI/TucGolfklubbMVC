@model IEnumerable<TucGolfklubb.Models.Product>
@{
    ViewData["Title"] = "Produkter";
}

<div style="padding-top: 120px;">

    <h2>Produkter</h2>

    <a asp-action="Create" class="btn btn-success mb-3">➕ Lägg till ny produkt</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Beskrivning</th>
                <th>Pris</th>
                <th>Lager</th>
                <th>Kategori</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                    <td>@item.Price.ToString("0.00") kr</td>
                    <td>@item.Stock</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">✏️ Redigera</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️ Radera</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-end mt-4">
        <a href="/Admin" class="btn btn-secondary">⬅️ Tillbaka till Adminpanel</a>
    </div>
</div>