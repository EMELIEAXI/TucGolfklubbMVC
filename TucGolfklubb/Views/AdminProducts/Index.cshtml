@model IEnumerable<TucGolfklubb.Models.Product>
@{
    ViewData["Title"] = "Produkter";
}

<style>
    body {
        padding-top: 40px;
    }
</style>

<div class="container forum-page">
    <h2 class="mb-4" style="color: #001b2e;">Produkter</h2>

    <!-- Add Product Button -->
    <div class="mb-4">
        <a asp-action="Create" class="btn custom-dark-button shadow-sm">➕ Lägg till ny produkt</a>
    </div>

    <!-- Products Table inside a wider container -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-lg-2">Namn</th>
                            <th class="col-lg-3">Beskrivning</th>
                            <th class="col-lg-2">Pris</th>
                            <th class="col-lg-1">Lager</th>
                            <th class="col-lg-2">Kategori</th>
                            <th class="col-lg-2">Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                                <td>@item.Price.ToString("0.00") kr</td>
                                <td>@item.Stock</td>
                                <td>@item.Category?.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Redigera</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Radera</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Back to Admin Panel -->
    <div class="text-end mt-4">
        <a href="/Admin" class="btn custom-secondary-button shadow-sm">⬅️ Tillbaka till Adminpanel</a>
    </div>
</div>
