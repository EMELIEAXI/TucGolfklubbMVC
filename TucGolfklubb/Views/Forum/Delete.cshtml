@model TucGolfklubb.Models.Forum

@{
    ViewData["Title"] = "Radera forum";
}

<div class="container forum-page">
    <h2 class="mb-4 text-danger">Radera forum</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body" style="background-color: #f8d7da;">
            <!-- light red/pink bg -->
            <p class="fw-bold mb-3" style="color: #721c24;">
                Är du säker på att du vill ta bort detta forum?
                Denna åtgärd kan inte ångras.
            </p>

            <dl class="row">
                <dt class="col-sm-3" style="color: #001b2e;">Titel:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3" style="color: #001b2e;">Beskrivning:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
            </dl>

            <form asp-action="Delete">
                @Html.HiddenFor(model => model.Id)

                <div class="d-flex flex-column flex-md-row gap-2 mt-4">
                    <input type="submit" value="Ja, radera" class="btn btn-danger" />
                    <a asp-action="Index" class="btn custom-secondary-button">← Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>
