@model TucGolfklubb.Models.ForumPost

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ForumPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                var forumIdValue = ViewData["ForumId"] as int?;
            }
            @if (forumIdValue.HasValue)
            {
                <!-- Hidden input if coming from a specific forum -->
                <input type="hidden" asp-for="ForumId" value="@forumIdValue.Value" />
                <p>Forum ID: @forumIdValue.Value</p>
            }
            else
            {
                <!-- Dropdown if no forum pre-selected -->
                <div class="form-group">
                    <label asp-for="ForumId" class="control-label">Välj forum</label>
                    <select asp-for="ForumId" class="form-control" asp-items="ViewBag.ForumId"></select>
                </div>
            }
            
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostedAt" class="control-label"></label>
                <!-- Hide the PostedAt field, let the controller set it -->
                <input type="hidden" asp-for="PostedAt" value="@DateTime.Now" />
                <span asp-validation-for="PostedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@{
    var forumId = ViewData["ForumId"] as int?;
}

@if (forumId.HasValue)
{
    <div>
        <a asp-controller="Forum" asp-action="Details" asp-route-id="@forumId.Value" class="btn btn-secondary">
            Back to Inlägg
        </a>
    </div>
}
else
{
    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
