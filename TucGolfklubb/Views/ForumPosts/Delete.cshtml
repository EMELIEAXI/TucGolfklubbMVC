@model TucGolfklubb.Models.ForumPost

@{
    ViewData["Title"] = "Radera inlägg";
}

<div class="container forum-page">
    <h2 class="mb-4 text-danger">Radera inlägg</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body" style="background-color: #f8d7da;">
            <p class="fw-bold mb-3" style="color: #721c24;">
                Är du säker på att du vill ta bort detta inlägg?
                Denna åtgärd kan inte ångras.
            </p>

            <dl class="row">
                <dt class="col-sm-3" style="color: #001b2e;">Forum:</dt>
                <dd class="col-sm-9">@Model.Forum?.Title</dd>

                <dt class="col-sm-3" style="color: #001b2e;">Användare:</dt>
                <dd class="col-sm-9">@Model.User?.UserName</dd>

                <dt class="col-sm-3" style="color: #001b2e;">Innehåll:</dt>
                <dd class="col-sm-9">@Model.Content</dd>

                <dt class="col-sm-3" style="color: #001b2e;">Publicerat:</dt>
                <dd class="col-sm-9">@Model.PostedAt.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>

            <form asp-action="Delete">
                @Html.HiddenFor(model => model.Id)

                <div class="d-flex flex-column flex-md-row gap-2 mt-4">
                    <input type="submit" value="Ja, radera" class="btn btn-danger" />
                    <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId"
                       class="btn custom-secondary-button">← Avbryt</a>
                </div>
            </form>
        </div>
    </div>
</div>
