@model TucGolfklubb.Models.ForumPost

@{
    ViewData["Title"] = "Details";
}

@if (Model == null)
{
    <p>No data available.</p>
}
else
{
    var forumPost = Model!;

    <h1>Forumdiskussion</h1>

    <!-- Forum Info Group -->
    <div>
        <p style="margin-bottom: 0;">
            <strong>Forum:</strong> @forumPost.Forum?.Title
        </p>
        <p class="text-muted" style="margin-top: 0.1rem; margin-left: 1rem;">
            <em>av: @(forumPost.User?.UserName ?? "Okänd") | publicerat: @forumPost.PostedAt.ToString("yyyy-MM-dd HH:mm")</em>
        </p>
    </div>

    <!-- Inlägg Info Group -->
    <div>
        <p style="margin-bottom: 0;">
            <strong>Inlägg:</strong> @forumPost.Content
        </p>
        <p class="text-muted" style="margin-top: 0.1rem; margin-left: 1rem;">
            <em>av: @(forumPost.User?.UserName ?? "Okänd") | publicerat: @forumPost.PostedAt.ToString("yyyy-MM-dd HH:mm")</em>
        </p>
    </div>

    <hr />
    <h3>Svar</h3>
    @if (forumPost.Replies != null && forumPost.Replies.Any())
    {
        foreach (var reply in forumPost.Replies)
        {
            <div class="border p-2 mb-2 rounded">
                <p>@reply.Content</p>
                <p class="text-muted">
                    Av: @(reply.User?.UserName ?? "Okänd") | @reply.PostedAt
                </p>
            </div>
        }
    }
    else
    {
        <p>Inga svar än.</p>
    }

    <hr />
    <h3>Lämna ett svar</h3>
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        @using (Html.BeginForm("CreateReply", "ForumPosts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("forumPostId", forumPost.Id)

            <div class="form-group">
                <textarea name="replyContent" class="form-control" rows="3" placeholder="Skriv ditt svar här..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Skicka svar</button>
        }
    }
    else
    {
        <p class="text-muted">Du måste vara inloggad för att svara.</p>
    }

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@forumPost.Id">Ändra</a> |
        <a asp-controller="Forum" asp-action="Details" asp-route-id="@forumPost.ForumId" class="btn btn-secondary mt-3">
            Back to Inlägg
        </a>
    </div>
}
