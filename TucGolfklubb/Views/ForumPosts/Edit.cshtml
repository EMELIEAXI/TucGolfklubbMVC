@model TucGolfklubb.Models.ForumPost

@{
    ViewData["Title"] = "Redigera inlägg";
}

<div class="container forum-page">
    <h2 class="mb-4" style="color: #001b2e;">Redigera inlägg</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body" style="background-color: #eef3f9;">
            <form asp-action="Edit">
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.ForumId)

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label" style="color: #1d3f58;">Innehåll</label>
                    <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex flex-column flex-md-row gap-2">
                    <button type="submit" class="btn custom-secondary-button">Spara ändringar</button>

                    <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId"
                       class="btn custom-secondary-button">
                        ← Tillbaka till forum
                    </a>
                </div>
            </form>
            <div class="d-flex justify-content-end mt-3">
                <a asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">
                   Radera inlägg
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
