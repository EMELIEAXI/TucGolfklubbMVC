@model TucGolfklubb.Models.ForumPost

@{
    ViewData["Title"] = "Edit";
}

<h1>Redigera inlägg</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ForumId" />

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Spara ändringar</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Forum" asp-action="Details" asp-route-id="@Model.ForumId">Tillbaka till forum</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
