@model TucGolfklubb.Models.ProductShopViewModel

<h2>Kvitto</h2>
<p>Ordernummer: @Model.OrderId</p>
<p>Datum: @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>

<table class="table">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Antal</th>
            <th>Pris</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.OrderItems != null)
        {
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                </tr>
            }
        }

    </tbody>
</table>

<h4>Total: @Model.TotalPrice.ToString("C")</h4>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tillbaka till startsidan</a>