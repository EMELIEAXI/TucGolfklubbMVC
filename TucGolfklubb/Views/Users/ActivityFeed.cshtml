@model List<TucGolfklubb.Models.UserActivity>

<h2>Aktivitetsflöde</h2>

@if (!Model.Any())
{
    <p>Inga aktiviteter från användare du följer ännu.</p>
}
else
{
    <ul class="list-group">
        @foreach (var activity in Model)
        {
            <li class="list-group-item">
                @{
                    var actionText = activity.Type switch
                    {
                        "Post" => "skrev ett inlägg:",
                        "Comment" => "kommenterade ett inlägg:",
                        "Reply" => "svarade på en kommentar:",
                        "Forum" => "skapade ett forum:",
                        _ => $"gjorde en {activity.Type.ToLower()}:"
                    };
                }

                <strong>@activity.User?.UserName</strong> @actionText
                <a asp-controller="ForumPosts" asp-action="Details" asp-route-id="@activity.ForumPostId">
                    @activity.Content
                </a>
                <br />
                <small class="text-muted">@activity.CreatedAt.ToString("g")</small>
            </li>
        }
    </ul>
}
