@model List<TucGolfklubb.Models.UserActivity>
@inject TucGolfklubb.Data.ApplicationDbContext db

<h2>Aktivitetsflöde</h2>

@if (!Model.Any())
{
    <p>Inga aktiviteter från användare du följer ännu.</p>
}
else
{
    <ul class="list-group">
        @foreach (var activity in Model)
        {
            <li class="list-group-item">
                @{
                    string actionText;
                    string targetUserName = "";
                    string replyAnchor = "";
                    string postUrl = Url.Action("Details", "ForumPosts", new { id = activity.ForumPostId }) ?? "#";

                    if (activity.Type == "Post")
                    {
                        actionText = "skrev ett inlägg:";
                    }
                    else if (activity.Type == "Comment")
                    {
                        actionText = "kommenterade ett inlägg:";
                    }
                    else if (activity.Type == "Forum")
                    {
                        actionText = "skapade ett forum:";
                    }
                    else if (activity.Type == "Reply")
                    {
                        var reply = db.Replies.FirstOrDefault(r => r.Id == activity.ForumReplyId);

                        if (reply != null)
                        {
                            replyAnchor = $"#reply-{reply.Id}";
                            postUrl += replyAnchor;

                            var parentReply = db.Replies.FirstOrDefault(r => r.Id == reply.ParentReplyId);
                            targetUserName = parentReply?.User?.UserName ?? "användaren";

                            if (parentReply?.ParentReplyId == null)
                            {
                                actionText = $"svarade på {targetUserName}s kommentar:";
                            }
                            else
                            {
                                actionText = $"svarade på {targetUserName}s svar:";
                            }
                        }
                        else
                        {
                            actionText = "svarade:";
                        }
                    }
                    else
                    {
                        actionText = $"gjorde en {activity.Type.ToLower()}:";
                    }
                }

                <strong>@activity.User?.UserName</strong> @actionText
                <a href="@postUrl">
                    @activity.Content
                </a>
                <br />
                <small class="text-muted">@activity.CreatedAt.ToString("g")</small>
            </li>
        }
    </ul>
}
