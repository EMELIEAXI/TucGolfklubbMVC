@model List<TucGolfklubb.Models.UserActivity>

<h2>Aktivitetsflöde</h2>

@if (!Model.Any())
{
    <p>Inga aktiviteter från användare du följer ännu.</p>
}
else
{
    <ul class="list-group">
        @foreach (var activity in Model)
        {
            <li class="list-group-item">
                <strong>@activity.User?.UserName</strong> gjorde en
                <span class="text-info">@activity.Type</span>:
                <a asp-controller="ForumPosts" asp-action="Details" asp-route-id="@activity.ForumPostId">
                    @activity.Content
                </a>
                <br />
                <small class="text-muted">@activity.CreatedAt.ToString("g")</small>
            </li>
        }
    </ul>
}
