@model List<TucGolfklubb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Användare";
}

<div class="container mt-5 pt-5">
    <h2>Alla användare</h2>

    <ul class="list-group">
        @foreach (var user in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    @{
                        var name = user?.FullName;

                        if (user == null)
                        {
                            name = "Okänd användare";
                        }
                        else if ((user.Email?.ToLower() ?? "") == "admin@golfklubb.se")
                        {
                            name = "Admin";
                        }
                    }
                    <strong>@name</strong>
                </span>

                @if (user != null)
                {
                    <a asp-action="Profile" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Visa profil</a>
                }
            </li>
        }
    </ul>
</div>